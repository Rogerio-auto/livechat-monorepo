{
  "name": "livechat-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "frontend",
    "backend",
    "cadastro",
    "landing",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm-run-all build:backend build:frontend build:cadastro build:landing",
    "build:backend": "npm run build --workspace backend",
    "build:frontend": "npm run build --workspace frontend",
    "build:cadastro": "cd cadastro && npm run build",
    "build:landing": "npm run build --workspace landing",
    "dev": "npm-run-all --parallel dev:backend dev:frontend dev:landing",
    "dev:backend": "npm run dev --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "dev:cadastro": "cd cadastro && npm run dev",
    "dev:landing": "npm run dev --workspace landing",
    "start": "npm run start:all",
    "start:all": "npm-run-all --parallel start:backend start:frontend start:landing",
    "start:backend": "npm run start --workspace backend",
    "start:frontend": "npm run preview --workspace frontend",
    "start:landing": "npm run preview --workspace landing",
    "worker": "npm run worker --workspace backend",
    "worker:inbound": "npm run worker:inbound --workspace backend",
    "worker:outbound": "npm run worker:outbound --workspace backend",
    "worker:campaigns": "npm run worker:campaigns --workspace backend",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rimraf backend/dist frontend/dist cadastro/dist"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "dependencies": {
    "node-cron": "^4.2.1"
  }
}
