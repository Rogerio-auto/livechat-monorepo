# ===== PRODUCTION ENVIRONMENT CONFIGURATION =====
# Copy this file to .env.production and fill with your production values

# ===== Supabase Configuration =====
SUPABASE_URL="https://ghbiigjdvzeoouxaviyz.supabase.co"
SUPABASE_ANON_KEY="your-supabase-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key-here"
JWT_COOKIE_NAME=sb_access_token
JWT_COOKIE_SECURE=true

# ===== Backend Configuration =====
PORT_BACKEND=5000
FRONTEND_ORIGIN=https://app.7sion.com,https://account.7sion.com
BACKEND_BASE_URL=https://api-back.7sion.com

# ===== RabbitMQ Configuration =====
RABBIT_URL="amqp://app:app@rabbitmq:5672?heartbeat=30"
RABBIT_PREFETCH=20
RABBIT_EXCHANGE_APP=livechat.app
RABBIT_EXCHANGE_META=livechat.meta
RABBIT_EXCHANGE_DLX=livechat.dlx

# ===== RabbitMQ Queues =====
RABBIT_Q_INBOUND=q.inbound.message
RABBIT_Q_OUTBOUND=q.outbound.request
RABBIT_Q_OUTBOUND_RETRY=q.outbound.retry.10s
RABBIT_Q_OUTBOUND_DLQ=q.outbound.dlq

# ===== Meta/WhatsApp Configuration =====
META_GRAPH_VERSION=v22.0
META_VERIFY_TOKEN=your-meta-verify-token
META_APP_SECRET=your-meta-app-secret
ENCRYPTION_KEY=your-encryption-key-here

# ===== PostgreSQL Configuration =====
PGHOST=db.ghbiigjdvzeoouxaviyz.supabase.co
PGPORT=5432
PGDATABASE=postgres
PGUSER=postgres
PGPASSWORD=your-postgres-password
PGSSLMODE=no-verify

# ===== Default Board ID =====
DEFAULT_LEADS_BOARD_ID=7584182a-1e20-4271-8898-65cdc9ceba1b

# ===== Redis Configuration =====
REDIS_URL=redis://:changeme@redis:6379/0
CACHE_TTL_LIST=180
CACHE_TTL_CHAT=30
CACHE_TTL_MSGS=30

# ===== Media Configuration =====
MEDIA_DIR=/app/media
MEDIA_PUBLIC_BASE=https://api-back.7sion.com/media
GRAPH_VERSION=v20.0
MEDIA_MAX_BYTES=104857600
MEDIA_ALLOWED_MIME=image/jpeg,image/png,image/webp,application/pdf,video/mp4,audio/mpeg,audio/ogg,audio/aac,audio/mp4
MEDIA_DOWNLOAD_TIMEOUT_MS=30000
MEDIA_CONCURRENCY=4

# ===== WAHA Integration =====
WAHA_BASE_URL=https://waha.7sion.com
WAHA_WEBHOOK_TOKEN=your-waha-webhook-token
WAHA_WEBHOOK_SECRET=your-waha-webhook-secret
WAHA_API_KEY=your-waha-api-key
WAHA_MEDIA_DIR=/app/.media

# ===== WAHA Database =====
WAHA_DB_HOST=127.0.0.1
WAHA_DB_PORT=55432
WAHA_DB_USER=postgres
WAHA_DB_PASSWORD=your-waha-db-password
WAHA_DB_SSLMODE=disable

# ===== Session Configuration =====
SESSION_SECRET=production-secret-change-this-to-random-string
