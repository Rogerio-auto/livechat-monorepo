{
  "name": "livechat-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "engines": {
    "node": ">=20.11.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "build": "npm run build:all",
    "build:all": "npm-run-all build:backend build:frontend",
    "build:backend": "npm run build --workspace backend",
    "build:frontend": "npm run build --workspace frontend",
    "dev": "npm-run-all --parallel dev:backend dev:frontend",
    "dev:backend": "npm run dev --workspace backend",
    "dev:frontend": "npm run dev --workspace frontend",
    "start": "npm run start:all",
    "start:all": "npm-run-all --parallel start:backend start:frontend",
    "start:backend": "npm run start --workspace backend",
    "start:frontend": "npm run preview --workspace frontend",
    "worker": "npm run worker --workspace backend",
    "worker:inbound": "npm run worker:inbound --workspace backend",
    "worker:outbound": "npm run worker:outbound --workspace backend",
    "worker:campaigns": "npm run worker:campaigns --workspace backend",
    "lint": "npm run lint --workspace frontend",
    "lint:fix": "npm run lint --workspace frontend -- --fix",
    "clean": "rimraf backend/dist frontend/dist"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  }
}
