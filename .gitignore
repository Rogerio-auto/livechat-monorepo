# Root ignores
node_modules/
.npm/
.pnpm-debug.log*
npm-debug.log*
*.log
logs/

# Permitir package-lock.json para builds reproduzíveis
# IMPORTANTE: NÃO ignorar package-lock.json para deploy consistente
!package-lock.json
!**/package-lock.json

# TypeScript cache
*.tsbuildinfo

# Build outputs
backend/dist/
frontend/dist/
dist/

# Test files e scripts de teste
backend/scripts/tests/
backend/scripts/test*.ts
backend/scripts/check*.ts
backend/scripts/run*.ts
backend/scripts/seed*.ts
backend/scripts/create*.ts
backend/scripts/cleanup*.sql
**/tests/
*.test.ts
*.spec.ts

# SQL migrations e arquivos SQL
backend/sql/
*.sql
!backend/sql/README.md

# Temporary/cache directories
.cache/
tmp/
temp/
tmp_*
*.diff
snapshot.txt
frontend/.vite/
frontend/.eslintcache
backend/.eslintcache

# Markdown files (ignorar todos exceto importantes)
*.md
!README.md
!LICENSE.md

# IDE/editor files
.vscode/*
!.vscode/extensions.json
!.vscode/settings.json
!.vscode/launch.json

# Environment files (NUNCA commitar com valores reais!)
.env
.env.local
.env.*.local
.env.production
backend/.env
frontend/.env
frontend/.env.production

# Manter apenas os arquivos .example
!.env.example
!**/.env.example
!**/.env.production.example

# OS / editor files
.DS_Store
Thumbs.db
.idea/
*.swp
*.swo

# Docker volumes e media
**/waha-media/
**/media/
volumes/

# Outros
.collect-snapshots
backend/tmp.bin