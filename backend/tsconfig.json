{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@livechat/shared": ["../packages/shared/src/index.ts"]
    }
  },
  "include": ["src/**/*", "../packages/shared/src/**/*"],
  "exclude": ["dist", "node_modules", "tsup.config.ts", "scripts"]
}
